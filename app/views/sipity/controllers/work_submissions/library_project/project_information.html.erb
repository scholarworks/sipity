<h1>Tell us more about the proposed project</h1>

<%= simple_form_for(view_object, url: request.path, as: :work, method: :post, html: { class: 'simple-form panel panel-primary with-footer' }) do |f| %>
  <legend class="panel-heading">
    <h3 class="panel-title">Project Information</h3>
  </legend>

  <fieldset class="panel-body">
    <%= f.error_notification %>
    <%= f.error :base, error_method: :to_sentence %>
    <div class="panel-tiles">
      <%= f.input :title, input_html: { class: 'form-control' } %>
      <%= f.input :project_description, as: :text, input_html: { class: 'form-control' } %>
      <%= f.input :project_impact, as: :text, input_html: { class: 'form-control' } %>
      <%= f.input :whom_does_this_impact, as: :text, input_html: { class: 'form-control' } %>
      <%= f.input :project_management_services_requested, as: :select, collection: view_object.project_management_services_requested_for_select, input_html: { class: 'form-control' } %>
      <%= f.input :project_priority, as: :select, collection: view_object.project_priority_for_select, input_html: { class: 'form-control' } %>
    </div>
  </fieldset>

  <div class="panel-footer action-pane">
    <%= f.submit nil, name: "form/#{model.processing_action_name}/submit" %>
  </div>
<% end %>

<div class="action-pane">
  <%= link_to t("sipity/decorators/entitiy_enrichments.cancel"), work_path(model.work), class: 'btn btn-default' %>
</div>
