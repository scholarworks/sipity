<% if [:email_message_action_url, :email_message_action_name, :email_message_action_description].all? {|method_name| action_in_the_inbox.respond_to?(method_name) } %>
<%# https://developers.google.com/gmail/markup/ %>
<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "EmailMessage",
  "potentialAction": {
    "@type": "ViewAction",
    "target": "<%= action_in_the_inbox.email_message_action_url %>",
    "name": "<%= action_in_the_inbox.email_message_action_name %>"
  },
  "description": "<%= action_in_the_inbox.email_message_action_name %>"
}
</script>
<% end %>
